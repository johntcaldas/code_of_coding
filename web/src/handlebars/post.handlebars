<div class="panel panel-default">

    <div class="panel-heading clearfix">
        <h4 id="title" class="pull-left">{{title}}</h4>
        <button type="button"
                class="pull-right hidden btn btn-default btn-xs"
                data-object-id="{{object_id}}">
            Edit
        </button>
    </div>

    <div class="panel-body">
        {{{html}}}
        <button id="read_more_btn" type="button" class="btn btn-default btn-xs">Read more ...</button>
    </div>

    <div class="panel-footer">{{date}}</div>

</div>