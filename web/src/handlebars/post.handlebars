<div class="panel panel-default">

    <div class="panel-heading clearfix">
        <h4 id="title" class="pull-left">{{title}}</h4>
        <button id="edit_btn"
                type="button"
                class="pull-right hidden btn btn-default btn-xs">
            Edit
        </button>
    </div>

    <div class="panel-body">
        {{{html}}}
        <button id="read_more_btn" type="button" class="btn btn-default btn-xs hidden">Read more ...</button>
    </div>

    <div class="panel-footer clearfix">
        <div class="pull-left">{{date}}</div>
        <div class="pull-right">
            Tags: <span class=text-muted>{{tags}}</span>
        </div>
    </div>

</div>